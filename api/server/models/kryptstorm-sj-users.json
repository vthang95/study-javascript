{
  "name": "KryptstormSjUsers",
  "description": "Kryptstorm Users for Study Javascript",
  "strict": true,
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "number",
      "dataType": "bigint",
      "required": true
    },
    "firstName": {
      "type": "string",
      "required": false,
      "default": null,
      "length": 100
    },
    "lastName": {
      "type": "string",
      "required": false,
      "default": null,
      "length": 100
    },
    "phone": {
      "type": "string",
      "required": false,
      "length": 15,
      "index": {
        "unique": true
      }
    },
    "status": {
      "type": "number",
      "required": true,
      "dataType": "tinyint",
      "limit": 1,
      "default": 0,
      "description": [
        "0 - New User",
        "1 - Active User - After validation, It'll be change to",
        "2 - Lock - User can not login but, all source of this user still available",
        "3 - Delete - User can not login and all source are hide"
      ],
      "index": true
    },
    "verificationType": {
      "type": "number",
      "required": false,
      "default": 1,
      "dataType": "tinyint",
      "limit": 1,
      "description": [
        "1 - Sync with Loopback built-in properties, so It's default value - represent for successful validation",
        "2 - Validate for reset password required"
      ]
    },
    "verificationExpired": {
      "type": "date",
      "required": false,
      "default": null
    },
    "created": {
      "type": "date",
      "required": true,
      "default": "$now"
    },
    "modified": {
      "type": "date",
      "default": null
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {},
  "http": {
    "path": "/users"
  },
  "scope": {
    "order": "id DESC",
    "limit": 15
  }
}
